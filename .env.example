# AWS SES Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Email Settings
EMAIL_DEFAULT_FROM=noreply@yourdomain.com

# FastMCP Server Configuration
MCP_SERVER_NAME="AWS SES Email Server"
MCP_SERVER_DESCRIPTION="Production-ready AWS SES email operations via FastMCP v2"

# Optional: Authentication (for production deployment)
# MCP_AUTH_TYPE=oauth
# MCP_CLIENT_ID=your_oauth_client_id
# MCP_CLIENT_SECRET=your_oauth_client_secret
# MCP_TOKEN_URL=https://your-auth-provider.com/token
# MCP_AUTH_SCOPES=email:send,email:manage

# Optional: HTTP Server Configuration
# MCP_HOST=0.0.0.0
# MCP_PORT=8000
# MCP_DEBUG=false